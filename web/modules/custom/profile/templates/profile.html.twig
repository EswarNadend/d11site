<div class="flex justify-center">
	<div class="container px-14 my-account-wrapper">
		<div
			class="flex justify-between items-center">
			<!-- Back Arrow Button -->
			<img
			src="themes/custom/engage_theme/images/Profile/reverse-arrow.svg" alt="Back Arrow" class="w-5 sm:w-7 cursor-pointer object-contain" onclick="history.go(-1)"/>

			<!-- Heading -->
			<h1 class="text-xl sm:text-2xl md:text-5xl font-bold text-center mt-8 md:mt-12 mb-8 md:mb-20 translateLabel search_field" label-alias="la_my_profile">
				My Profile
			</h1>
			<div class="successOrFailure hidden absolute left-1/2 transform -translate-x-1/2 animate-fade-in-down">
				<div class="flex items-center gap-4 border shadow-xl rounded-xl px-6 py-4 bg-white text-center lg:text-left">
					<img src="" class="update-img w-16 h-16" alt="status icon">
					<p class="update-msg text-base font-medium text-gray-800"></p>
				</div>
			</div>

			<!-- Placeholder for symmetry -->
			<div class="w-5 sm:w-7"></div>
		</div>
		<div class="gap-4 md:flex">
			<div class="md:basis-[33%]">
				<h1 class="text-2xl text-[#404040] font-[nevis] font-bold mb-8 s:mb-5 xs:mb-5 translateLabel search_field" label-alias="la_personal_details">Personal Details</h1>
				<div class="container my-account-wrapper scroller max-w-4xl mx-auto border border-inherit border-2 rounded-md p-4 bg-white mb-44
																																														            text-center lg:text-left grid grid-cols-1 gap-4
																																														            sm:mb-5 xs:mb-5">
					<div
						class="">
						{# <label class="block text-sm font-medium text-gray-700 mb-1">{{ form.profile_picture['#title'] }}</label> #}
						{{ profile_picture_form }}
					</div>

					<div
						class="grid gap-2">
						<!-- First Name -->
						<div id="engage_form_input">
							{{ form }}
							</div>

						</div>
					</div>
				</div>
				<div class="md:basis-[33%]">
					<h1 class="text-2xl text-[#404040] font-[nevis] font-bold mb-8 s:mb-5 xs:mb-5 translateLabel search_field" label-alias="la_family_details">Family Details</h1>
					<div class="container my-account-wrapper scroller border-inherit	border-2 rounded-lg p-4 bg-white mb-44 text-center lg:text-start  s:mb-5 xs:mb-5">

						<div
							class="flex justify-between items-center gap-4">
							<!-- Add Family Member Section -->
							<div class="flex gap-3 items-center">
								<div class="border rounded-full p-3">
									<a href="./new-family-member">
										<img class="object-contain cursor-pointer" src="themes/custom/engage_theme/images/Profile/add-family.png" alt="add-family">
									</a>
								</div>
								<p class="add_family translateLabel search_field" label-alias="la_add_family_memebers">
									Add Family Members
								</p>
							</div>

							<!-- Toggle Delete Icon -->
							<div class="showDeleteIcons flex items-center gap-2">
								<div class="swap-off cursor-pointer">
									<img class="h-6 w-6" src="themes/custom/engage_theme/images/Profile/delete_all.png" alt="delete_icon">
								</div>
								<div class="swap-on hidden cursor-pointer">
									<img class="h-6 w-6" src="themes/custom/engage_theme/images/Profile/normal_clear.svg" alt="delete_icon">
								</div>
							</div>
						</div>

						<div class="border-t border-[#dedede] border-solid dottedBorder my-3"></div>
						{{ drupal_block('profile_family_members_block')}}

					</div>

				</div>
				<div class="md:basis-[33%]">
					<h1 class="text-2xl text-[#404040] font-[nevis] font-bold mb-8 s:mb-5 xs:mb-5 translateLabel search_field" label-alias="la_my_account">My Account</h1>
					<div class="container my-account-wrapper scroller max-w-4xl mx-auto border border-inherit border-2 rounded-md p-5 bg-white mb-44
																																																						            text-center lg:text-left grid grid-cols-1 gap-4
																																																						            sm:mb-5 xs:mb-5">

						{{ drupal_view("account_details","block_1")}}

					</div>
				</div>
			</div>
		</div>


		<div
			id="feedback_profile" tabindex="-1" aria-hidden="true" class=" hidden modal-thanks overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-auto max-h-full" style="background:#0000008a">
			<!-- Container for the profile-engage template -->
			<div
				class="relative client p-4 w-full max-w-2xl max-h-full">
				<!-- Container for the profile-engage template -->
				<div
					class=" feedback_div_1 feedback_div_2">
					<!-- Container for the profile-engage template -->
					<p class="emoji_happy">
						<img src="themes/custom/engage_theme/images/Profile/success.png" alt="Success Popup"/>
					</p>
					<div class="thanks_title">
						<p>Profile Details Updated Successfully</p>
					</div>

					<div
						class="modal-action justify-center gap-5 mb-5">
						<!-- Container for the profile-engage template -->
						<a href="my-account" class="btn btn-sm btn-warning w-52 h-12 text-white text-lg font-['Open_Sans'] capitalize okay">Ok</a>

					</div>
					<!-- Container for the profile-engage template -->
				</div>
				<!-- Container for the profile-engage template -->
			</div>
			<!-- Container for the profile-engage template -->

		</div>

		{# Modal for Delete Family Member #}

		<!-- Hidden Modal -->


		<div id="popup-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-[#0000009c]">
			<div class="relative p-4 w-full max-w-xl max-h-full">
				<div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
					<button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal">
						<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
						</svg>
						<span class="sr-only">Close modal</span>
					</button>
					<input type="hidden" id="delete-nid" value="">
					<div class="p-4 md:p-5 text-center">
						<svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 20 20">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
						</svg>
						<h3 class="font-bold text-2xl font-['nevis'] mb-6">Are you sure you want to delete your member?</h3>
						<button data-modal-hide="popup-modal" type="button" class="engage-btn confirm-delete-btn text-white bg-[##ffcc00] focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-block items-center px-5 py-2.5 text-center">
							Yes
						</button>
						<button data-modal-hide="popup-modal" type="button" class="engage-cancel-btn py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">No</button>
					</div>
				</div>
			</div>
		</div>

		{# Modal for Delete Account #}

		<!-- Hidden Modal -->

		<div id="delete-account-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-[#0000009c]">
			<div class="relative p-4 w-full max-w-xl max-h-full">
				<div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
					<button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="delete-account-modal">
						<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
						</svg>
						<span class="sr-only">Close modal</span>
					</button>
					<input type="hidden" id="delete-nid" value="">
					<div class="p-4 md:p-5 text-center">
						<svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 20 20">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
						</svg>
						<h3 class="font-bold text-2xl font-['nevis'] mb-6">Are you sure you want to delete your account?</h3>
						<button data-modal-hide="delete-account-modal" data-modal-target="delete-account-input-modal" engage-button="engage-button-modal" data-modal-toggle="delete-account-input-modal" type="button" class="engage-btn text-white bg-[##ffcc00] focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-block items-center px-5 py-2.5 text-center">
							Yes
						</button>
						<button data-modal-hide="delete-account-modal" type="button" class="engage-cancel-btn py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">No</button>
					</div>
				</div>
			</div>
		</div>


		<div id="delete-account-input-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-[#0000009c]">
			<div class="relative p-4 w-full max-w-xl max-h-full">
				<div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
					<button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="delete-account-input-modal">
						<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
						</svg>
						<span class="sr-only">Close modal</span>
					</button>
					{# <input type="hidden" id="delete-nid" value=""> #}
					<div class="p-4 md:p-5 text-center">
						<svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 20 20">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
						</svg>
						<h3 class="font-bold text-2xl font-['nevis'] mb-6">Enter Delete in Capital Letters to Confirm</h3>
						<div class="relative mx-2 mb-4">
							<input type="text" id="delete" required placeholder=" " class="peer block w-full appearance-none rounded-lg border border-gray-300 bg-transparent px-2.5 pb-2.5 pt-4 text-sm text-gray-900 focus:border-yellow-600 focus:outline-none focus:ring-0 dark:border-gray-600 dark:text-white dark:focus:border-yellow-500"/>
						</div>

						<button type="button" class="engage-btn confirm-account-btn text-white bg-[##ffcc00] focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-block items-center px-5 py-2.5 text-center">
							Ok
						</button>
						<button data-modal-hide="delete-account-input-modal" type="button" class="engage-cancel-btn py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Cancel</button>
					</div>
				</div>
			</div>
		</div>

		{# Modal for Logout Modal #}

		<!-- Hidden Modal -->

		<div id="logout-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-[#0000009c]">
			<div class="relative p-4 w-full max-w-xl max-h-full">
				<div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
					<button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="logout-modal">
						<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
						</svg>
						<span class="sr-only">Close modal</span>
					</button>
					<input type="hidden" id="delete-nid" value="">
					<div class="p-4 md:p-5 text-center">
						<svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 20 20">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
						</svg>
						<h3 class="font-bold text-2xl font-['nevis'] mb-6">Are you sure you want to Log out ?</h3>
						<button data-modal-hide="logout-modal" type="button" class="engage-btn confirm-logout-btn text-white bg-[##ffcc00] focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-block items-center px-5 py-2.5 text-center">
							Yes
						</button>
						<button data-modal-hide="logout-modal" type="button" class="engage-cancel-btn py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">No</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
