


{% if members %}
  {% for member in members %}
    <li class="py-4 flex first:pt-0 last:pb-0 block family_list justify-center items-center">
        <div class="h-24 w-32">
        {% if member.image is not null and member.image matches '/\\.(jpe?g|png)$/i' %}
            <img class="w-full h-full rounded-full" src="{{ member.image }}" alt="Family Member Image">
        {% else %}
            <img class="w-full h-full rounded-full" src="themes/custom/engage_theme/images/Profile/profile_member.png" alt="Family Member Image">
        {% endif %}
        </div>

        <div class="ml-3 overflow-hidden border-2 p-2 rounded-md w-full">
          <p class="text-sm font-semibold text-slate-900 font-['Open_Sans'] py-1">{{ member.name }} | {{ member.relationship }}</p>
          <p class="text-sm font-normal truncate font-['Open_Sans'] py-1">{{ member.email }}</p>
          <p class="text-sm font-normal truncate font-['Open_Sans'] py-1">{{ member.contact }}</p>
        </div>
        <button type="button" data-modal-target="popup-modal" engage-button ="engage-button-modal" data-modal-toggle="popup-modal" data-nid="{{ member.contactId }}" class="border-2 p-2 h-24 rounded-md flex items-center mx-1 border-rose-400 bg-[#de001b0d] delFamilmem deleteRedIcon hidden" nid={{ member.contactId }}>
          <img class="h-6 w-6 cursor-pointer" src="themes/custom/engage_theme/images/Profile/delete_icon.svg" alt="delete_icon">
        </button>
        {# <button  class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
Toggle modal
</button> #}
      </li>
  {% endfor %}
{% else %}
  <p>No family members found.</p>
{% endif %}


