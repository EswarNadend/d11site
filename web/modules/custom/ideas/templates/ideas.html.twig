<div class="container mx-auto relative ideas_page
										            pt-10
										            sm:p-5
										            md:px-20 md:pb-32
										            xs:p-5 xs:mt-0 xs:mb-0
										            s:p-5 s:mt-0 s:mb-0">
	<div class="flex justify-center">
		<div class="container px-14 my-ideas-wrapper">
			<div
				class="flex justify-between items-center">
				<!-- Back Arrow Button -->
				<img
				src="themes/custom/engage_theme/images/Profile/reverse-arrow.svg" alt="Back Arrow" class="w-5 sm:w-7 cursor-pointer object-contain" onclick="history.go(-1)"/>

				<!-- Heading -->
				<h1 class="text-xl sm:text-2xl md:text-5xl font-bold text-center mt-8 md:mt-12 mb-8 md:mb-20 translateLabel search_field" label-alias="la_my_profile">
					Add New Idea
				</h1>

				<!-- Placeholder for symmetry -->
				<div class="w-5 sm:w-7"></div>
			</div>
		</div>
	</div>

	<!-- âœ… Ensure form is wrapped inside this div -->
	<div class="add-ideas-user border-[2px] border-[#3333333b] rounded-[15px] p-12 bg-white" id="engage_form_input">
		<div id="ideas-flex" class="flex gap-[2rem]">
			<div class="w-[50%]">
                {{ form.first_name }}
            </div>
            <div class="w-[50%]">
                {{ form.author }}
            </div>
			
		</div>
		<div>
			{{ form.category_idea }}
		</div>
		<div>
			{{ form.idea_content }}
		</div>
		<div class="w-[50%]">
			{{ form.upload_file }}
		</div>
		<div class="mb-4">
			{{ form.terms }}
		</div>
		<div>
			{{ form.actions }}
		</div>
	</div>
	{{ form.form_src_id }}
	{{ form.form_build_id }}
	{{ form.form_token }}
	{{ form.form_id }}
</div>
