{% set total = rows|length %}
{% set first_row_count = 4 %}
{# First Row #}
<div class="flex flex-wrap justify-center gap-6 sm:gap-8 md:gap-10">
  {% for i in 0..(first_row_count - 1) %}
    {% if i < total %}
      {% set row = rows[i] %}
      {# {{ dump() }} #}
      <div class="flex flex-col items-center justify-center border-custom bg-white transition duration-300 hover:border-yellow hover:border-b-4
                  w-44 h-40 xs:w-44 xs:h-40 s:w-44 s:h-40 md:w-[270px] md:h-52 2xl:w-[310px] rounded-2xl md:rounded-3xl p-4 gap-5 md:gap-10 text-xl">
        <img class="object-contain h-16 w-16 md:h-24 md:w-24" 
             src="{{ file_url(row.content['#row']._entity.field_city_information_image.0.entity.uri.value|image_style('city_information')) }}"
             alt="{{ row.content['#row']._entity.field_city_information_image.0.alt }}" height="64" width="64">
        <h2 class="text-sm md:text-xl text-center text-light_dark font-bold capitalize font-nevis">
          {{ row.content['#row']._entity.field_description_title.0.value }}
        </h2>
      </div>
    {% endif %}
  {% endfor %}
</div>

{# Second Row if remaining items exist #}
{% if total > first_row_count %}
  <div class="flex flex-wrap justify-center gap-6 sm:gap-8 md:gap-10 mt-6">
    {% for i in first_row_count..(total - 1) %}
      {% set row = rows[i] %}
      <div class="flex flex-col items-center justify-center border-custom bg-white transition duration-300 hover:border-yellow hover:border-b-4
                  w-44 h-40 xs:w-44 xs:h-40 s:w-44 s:h-40 md:w-[270px] md:h-52 2xl:w-[310px] rounded-2xl md:rounded-3xl p-4 gap-5 md:gap-10 text-xl">
        <img class="object-contain h-16 w-16 md:h-24 md:w-24" 
             src="{{ file_url(row.content['#row']._entity.field_city_information_image.0.entity.uri.value|image_style('city_information')) }}"
             alt="{{ row.content['#row']._entity.field_city_information_image.0.alt }}" height="64" width="64">
        <h2 class="text-sm md:text-xl text-center text-light_dark font-bold capitalize font-nevis">
          {{ row.content['#row']._entity.field_description_title.0.value }}
        </h2>
      </div>
    {% endfor %}
  </div>
{% endif %}
