<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">

    {# ✅ Performance: Preconnect to CDN domains #}
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">

    {# ✅ SEO + Accessibility #}
    <title>{{ head_title|safe_join(' | ') }}</title>

    {# ✅ CSS & JS placeholders for Drupal to inject core/libraries #}
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes.addClass('overflow-x-hidden font-sans') }}>
    
    {# ✅ Accessibility: Skip link for screen readers #}
    <a href="#main-content" class="visually-hidden focusable skip-link">
      {{ 'Skip to main content'|t }}
    </a>

    {# ✅ Drupal content regions #}
    {{ page_top }}
    {{ page }}
    {{ page_bottom }}

    {# ✅ JS scripts to be loaded at the end of body #}
    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
